@page
@model PresentationLayer.Pages.AdminPanel.AdminModel

@{
    ViewData["Title"] = "AdminPanel";
    int roleID = int.Parse(HttpContext.Session.GetString("RoleID"));
    if (roleID != 1)
    {
        Response.Redirect("/Permission");
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel - PresentationLayer</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f7fafc;
        }

        .sidebar {
            position: fixed;
            top: 0;
            bottom: 0;
            left: 0;
            width: 240px;
            background-color: #1a202c;
            color: #fff;
            padding-top: 20px;
            box-shadow: 2px 0 10px rgba(0, 0, 0, 0.1);
            z-index: 1000;
        }

            .sidebar h5 {
                color: #cbd5e0;
                font-size: 1.2rem;
                margin: 15px 15px 20px;
            }

            .sidebar a {
                color: #cbd5e0;
                padding: 10px 20px;
                display: flex;
                align-items: center;
                text-decoration: none;
                border-radius: 6px;
                transition: background 0.2s ease;
            }

                .sidebar a:hover, .sidebar a.active {
                    background-color: #2d3748;
                    color: #e2e8f0;
                }

        .main-content {
            margin-left: 240px;
            padding: 20px;
        }

        .page-header {
            color: #2d3748;
            font-size: 1.8rem;
            font-weight: 600;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .table-container {
            background: #fff;
            border-radius: 10px;
            padding: 20px;
            margin-top: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .table th, .table td {
            text-align: left;
            vertical-align: middle;
            padding: 10px;
        }

        .table th {
            background-color: #4a5568;
            color: #ffffff;
            font-weight: bold;
        }

        .table tbody tr:nth-child(odd) {
            background-color: #f7fafc;
        }

        .btn-create {
            background-color: #3182ce;
            color: #ffffff;
            border-radius: 8px;
            padding: 8px 20px;
            font-size: 1rem;
            margin-bottom: 15px;
        }

            .btn-create:hover {
                background-color: #2b6cb0;
            }

        .btn-group .btn {
            margin: 0 5px;
            border-radius: 5px;
            font-size: 0.9rem;
        }

        .btn-warning {
            background-color: #ed8936;
            color: #ffffff;
        }

            .btn-warning:hover {
                background-color: #dd6b20;
            }

        .btn-info {
            background-color: #4299e1;
            color: #ffffff;
        }

            .btn-info:hover {
                background-color: #3182ce;
            }

        .btn-danger {
            background-color: #e53e3e;
            color: #ffffff;
        }

            .btn-danger:hover {
                background-color: #c53030;
            }

    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="sidebar d-md-block" id="sidebar">
                <h5>Admin Panel</h5>
                <ul class="nav flex-column">
                    <li class="nav-item active">
                        <a class="nav-link d-flex align-items-center" asp-page="/AdminPanel/Properties/Index">
                            <i class="fas fa-home"></i><span>Properties</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center" asp-page="/AdminPanel/Members/Index">
                            <i class="fas fa-users"></i><span>Members</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center" asp-page="/AdminPanel/Transactions/Index">
                            <i class="fas fa-users"></i><span>Transactions</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center" asp-page="/Login">
                            <i class="fas fa-sign-out-alt"></i><span>Logout</span>
                        </a>
                    </li>
                </ul>
            </nav>

            <!-- Main Content -->
            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4 main-content" id="mainContent">
                <div class="page-header">
                     
                    Welcome to the Admin Panel
                </div>
                <div>
                    <p>Select an option from the sidebar to manage properties or members.</p>
                </div>
            </main>
        </div>
    </div>
</body>
</html>
